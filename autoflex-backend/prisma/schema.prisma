generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  name      String
  price     Decimal  @db.Decimal(10, 2)

  materials ProductRawMaterial[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RawMaterial {
  id            Int      @id @default(autoincrement())
  code          String   @unique
  name          String
  stockQuantity Decimal  @db.Decimal(10, 2)

  products      ProductRawMaterial[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ProductRawMaterial {
  id               Int     @id @default(autoincrement())

  productId        Int
  rawMaterialId    Int

  requiredQuantity Decimal @db.Decimal(10, 2)

  product          Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  rawMaterial      RawMaterial @relation(fields: [rawMaterialId], references: [id], onDelete: Cascade)

  @@unique([productId, rawMaterialId])
}